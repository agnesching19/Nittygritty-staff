<div class="container">
  <h1>
    Nittygritty - Staff of the Month
    <i class="fa fa-hand-o-right" aria-hidden="true"></i>
  </h1>

  <%= simple_form_for(@staff) do |f| %>
    <% if @staff.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @staff.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-inputs">
      <%= f.input :email, placeholder: "Log In With Your Email" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'LOG IN', class: "btn btn-info" %>
    </div>
  <% end %>

</div>
